<%- include('../partials/header') %>

<h2>Current Flight Details</h2>
<section id="show-page">
    <div>Airline: <%= flight.airline %></div>
    <div>Airport: <%= flight.airport %></div>
    <div>Flight No: <%= flight.flightNo %></div>
    <div>Departs: <%= flight.departs %></div>
  </section>
  <br/>
  
<h2>Destination</h2>
  <% if (true) { %>
    <table>
      <thead>
        <tr>
          <!-- Table headers -->
          <th>Airport</th> 
          <th>Arrival</th>
        </tr>
      </thead>
      <tbody>
        <!-- Table body -->
        <% flight.destinations.forEach(function(f) { %>
          <tr>
            <td><%= f.airportArrival %></td>
            <td><%= f.arrival %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Destinations Yet</h5>
  <% } %>

  <form id="add-destination-form" method="POST"
    action="/flights/<%= flight._id %>/destinations">
    <br/>
    <label> Airport: 
      <select name="airportArrival">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select>
    </label>
    <br/>
    <label>Arrival Date: 
      <input type="datetime-local" name="arrival"/>
    </label>
    <br/>
    
    <input type="submit" value="Add Destination">
  </form>
  
  <h2>Tickets Created</h2>
    <table>
      <thead>
        <tr>
          <!-- Table headers -->
          <th>Seat ID</th> 
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <!-- Table body -->
        <% ticket.forEach(function(t) { %>
          <tr>
            <td><%= t.seat %></td>
            <td>$<%= t.price %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <br/>
  <button><a href="/flights/<%= flight._id %>/tickets/new">Create Ticket for this Flight</a></button>

  

<%- include('../partials/footer') %>